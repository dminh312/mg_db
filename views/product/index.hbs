<div class="row">
    <div class="col s12">
        <h3>Product List</h3>
        {{#if isAdmin}}
        <a href="/product/add" class="btn waves-effect waves-light green">
            <i class="material-icons left">add</i>Add New Product
        </a>
        {{/if}}
    </div>
</div>

<div class="row" style="margin-top: 20px;">
    <div class="col s12">
        <table class="striped highlight responsive-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Category</th>
                    {{#if isAdmin}}
                    <th>Actions</th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each productList}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>${{this.price}}</td>
                    <td>
                        {{#if this.image}}
                            <img src="{{this.image}}" alt="{{this.name}}" style="max-width: 100px; max-height: 100px;">
                        {{else}}
                            No Image
                        {{/if}}
                    </td>
                    <td>{{#if this.category}}{{this.category.name}}{{else}}No Category{{/if}}</td>
                    {{#if ../isAdmin}}
                    <td>
                        <a href="/product/edit/{{this._id}}" class="btn-small waves-effect waves-light blue">
                            <i class="material-icons">edit</i>
                        </a>
                        <a href="/product/delete/{{this._id}}" class="btn-small waves-effect waves-light red" onclick="return confirm('Are you sure you want to delete this product?')">
                            <i class="material-icons">delete</i>
                        </a>
                    </td>
                    {{/if}}
                </tr>
                {{else}}
                <tr>
                    <td colspan="{{#if ../isAdmin}}5{{else}}4{{/if}}" class="center-align">No products found</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
