<div class="row">
    <div class="col s12">
        <h3>Category List</h3>
        {{#if isAdmin}}
        <a href="/category/add" class="btn waves-effect waves-light green">
            <i class="material-icons left">add</i>Add New Category
        </a>
        {{/if}}
    </div>
</div>

<div class="row" style="margin-top: 20px;">
    <div class="col s12">
        <table class="striped highlight responsive-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Category Name</th>
                    <th>Description</th>
                    {{#if isAdmin}}
                    <th>Actions</th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each categoryList}}
                <tr>
                    <td>{{@index}}</td>
                    <td><a href="/category/detail/{{_id}}">{{name}}</a></td>
                    <td>{{description}}</td>
                    {{#if ../isAdmin}}
                    <td>
                        <a href="/category/edit/{{_id}}" class="btn-small waves-effect waves-light blue">
                            <i class="material-icons">edit</i>
                        </a>
                        <a href="/category/delete/{{_id}}" class="btn-small waves-effect waves-light red" onclick="return confirm('Are you sure you want to delete this category?')">
                            <i class="material-icons">delete</i>
                        </a>
                    </td>
                    {{/if}}
                </tr>
                {{else}}
                <tr>
                    <td colspan="{{#if ../isAdmin}}4{{else}}3{{/if}}" class="center-align">No categories found</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>